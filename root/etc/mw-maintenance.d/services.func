
service_nginx_restart(){
	# nginx: master process*
	proc_name="nginx: master process"
	pid="$(cat /var/run/nginx.pid)"
	echo "### SIGTERM $pid - $proc_name ###"
	kill $pid
	wait $!
	sleep 2
	pid="$(cat /var/run/nginx.pid)"
	echo "### new PID is $pid"
}

